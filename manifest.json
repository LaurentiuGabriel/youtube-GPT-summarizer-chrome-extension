{
  "manifest_version": 2,
  "name": "Youtube Summarizer",
  "description": "A simple extension wich summarizes Youtube videos",
  "version": "1.0",
  "background": {
    "scripts": ["src/index.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "src/popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ]
}
